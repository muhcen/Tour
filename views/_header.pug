header.header 
    nav.nav.nav--tours
        a.nav__el(href="/") All tours
    .header__logo 
        img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--user 
        if user 
            a.nav__el.nav__el--logout(href='/overview') Log Out
            a.nav__el(href="/Me")
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`photo of ${user.name}`) 
                span= user.name.split(' ')[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="#") Sign up
            div.g-signin2(data-onsuccess="onSignIn")
            a(href="#" onclick="signOut();") Sign out

    
    script(src="https://js.stripe.com/v3/")


